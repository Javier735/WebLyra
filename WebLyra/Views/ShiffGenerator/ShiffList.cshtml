
@model IEnumerable<Shiff>
<br />
@if (Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Estatus</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Comentarios</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.FolioNumber</th>
                        <td>@item.Status</td>
                        <td>@item.CreationDate.ToShortDateString()</td>
                        <td>@item.Comments</td>
                    </tr>
                }                
            </tbody>
        </table>
    </div>   
}
else
{
    <br />
    <hr />
    <h4>Sin registros</h4>
}